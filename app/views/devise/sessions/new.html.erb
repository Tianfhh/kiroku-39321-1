<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'new_user', local: true do |f| %>
  <div class="form-wrap">
    <div class='form-header'>
      <h2 class='form-header-text'>
          会員情報入力
      </h2>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
      

    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>
   
    </div>
  </div>
 <% end %>

 <%= render "shared/second-header"%>